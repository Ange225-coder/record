{% block body %}
    <section>
        <h1>Tarif par nuit</h1>

        <h2>Combien souhaitez-vous facturez par nuit ?</h2>

        {{ form_start(pricePerNightForm, {'attr' : {'novalidate' : 'novalidate'}}) }}
            <div>
                {{ form_errors(pricePerNightForm.pricePerNight) }}
                {{ form_label(pricePerNightForm.pricePerNight) }}<br >
                {{ form_widget(pricePerNightForm.pricePerNight) }}
            </div>

            <button type="submit">Continuer</button>
        {{ form_end(pricePerNightForm) }}
    </section>
{% endblock %}








{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const pricePerNightInput = document.getElementById('price_per_night_types_pricePerNight');

            pricePerNightInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });
    </script>
{% endblock %}